<Window x:Class="MainWindowForGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MainWindowForGame"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Догадка:" Margin="10"/>
        <TextBox x:Name="GuessTextBox" Grid.Row="1" Margin="10" IsReadOnly="True"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="Угадал" Width="80" Height="25"/>
            <Button Content="Не угадал" Width="80" Height="25"/>
        </StackPanel>

        <Button Grid.Row="3" Content="Заново" Width="80" Height="25" HorizontalAlignment="Center" Margin="10"/>
    </Grid>
</Window>